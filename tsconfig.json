{
  "extends": "expo/tsconfig.base",
  "compilerOptions": {
    "strict": true,
    "baseUrl": ".",
    "paths": {
      "@/components": ["src/components"],
      "@/components/*": ["src/components/*"],
      "@/hooks": ["src/hooks"],
      "@/hooks/*": ["src/hooks/*"],
      "@/screens": ["src/screens"],
      "@/screens/*": ["src/screens/*"],
      "@/utils": ["src/utils"],
      "@/utils/*": ["src/utils/*"],
      "@/contexts": ["src/contexts"],
      "@/contexts/*": ["src/contexts/*"],
      "@/assets": ["src/assets"],
      "@/assets/*": ["src/assets/*"],
      "@/types": ["src/types"],
      "@/types/*": ["src/types/*"]
    }
  },
  "include": ["src/**/*", "App.tsx", "env.d.ts", "nativewind-env.d.ts"]
}
